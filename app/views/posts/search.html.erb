<%= render "shared/header" %>

<div class="main_wrapper">
<div class="side_ber">
    <%= render "side_bar" %>
</div>
<div class="main">
<% if @post.length == 0 %>
   <h4 class="search-h4">検索結果 0件</h4>
   <% else %>
  <%# <p class="mypage-nickname"><%= 検索結果一覧</p>  %>
